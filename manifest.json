{
  "name": "Down the Donald",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Auto-downvote all comments of posts in https://www.reddit.com/r/The_Donald",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "https://www.reddit.com/r/The_Donald/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/r/The_Donald/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}